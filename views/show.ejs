<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header center aligned"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= moment(blog.created).format('LL') %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <hr>
            <a href="/blogs/<%= blog._id %>/edit" class="ui yellow basic button">Edit Blog</a>
            <form id="delete" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
                <button class="ui red basic button">Remove Blog</button>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>
