<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header center aligned">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Blog Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="What is on your mind..."></textarea>
        </div>
        <button class="ui right labeled icon button teal">
          <i class="arrow circle right icon"></i>
          Create Blog
        </button>
    </form>
</div>
<% include ./partials/footer %>
